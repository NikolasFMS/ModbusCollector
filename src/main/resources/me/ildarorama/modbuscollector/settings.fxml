<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="347.0" prefWidth="518.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="me.ildarorama.modbuscollector.SettingsController">
    <center>
        <VBox>
            <children>
                <GridPane hgap="5.0" prefHeight="240.0" prefWidth="498.0" vgap="5.0" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Порт"/>
                        <ComboBox fx:id="cbxPort" prefWidth="150.0" GridPane.columnIndex="1"/>
                        <Label text="Скорость" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="cbxSpeed" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label text="Адрес слев устройства" GridPane.rowIndex="2"/>
                        <Spinner fx:id="edtSlave" editable="true" prefHeight="26.0" prefWidth="151.0"
                                 GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label text="Период опроса, (c)" GridPane.rowIndex="3"/>
                        <Spinner fx:id="edtModbusInterval" editable="true" prefHeight="26.0" prefWidth="152.0"
                                 GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <Label text="URL для отправки данных" GridPane.rowIndex="4"/>
                        <TextField fx:id="edtDataSourceEndpoint" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </GridPane>
                <Pane prefHeight="106.0" prefWidth="498.0" VBox.vgrow="ALWAYS"/>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <HBox prefHeight="9.0" prefWidth="518.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#btnCloseClick" text="Закрыть"/>
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#btnSaveClick" text="Сохранить"/>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
